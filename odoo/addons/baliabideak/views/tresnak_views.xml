<odoo>
    <record id="tresnak_view_form" model="ir.ui.view">
        <field name="name">tresnak.form</field>
        <field name="model">tresnak</field>
        <field name="arch" type="xml">
            <form string="Tresnak">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="serial_number" />
                        <field name="purchase_date" />
                        <field name="value" />
                        <field name="state" />
                        <field name="is_electric" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tresnak_view_tree" model="ir.ui.view">
        <field name="name">tresnak.tree</field>
        <field name="model">tresnak</field>
        <field name="arch" type="xml">
            <tree string="Tresnak">
                <field name="name" />
                <field name="serial_number" />
                <field name="state" />
                <field name="is_electric" />
            </tree>
        </field>
    </record>

    <record id="tresnak_action" model="ir.actions.act_window">
        <field name="name">Tresnak</field>
        <field name="res_model">tresnak</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tresnak" name="Baliabideak"/>

    <menuitem id="tresnen_inbentarioa" name="Tresnen Inbentarioa" parent="menu_tresnak" action="baliabideak_action"/>

</odoo>