<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_expense_form_simple" model="ir.ui.view">
        <field name="name">hr.expense.form.simple</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="pisua_id"/>
                    <field name="x_worker_ids"/>
                    <field name="custom_note"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_hr_employee_form_simple" model="ir.ui.view">
        <field name="name">hr.employee.form.simple</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="pisua_id"/>
            </xpath>
        </field>
    </record>

</odoo>