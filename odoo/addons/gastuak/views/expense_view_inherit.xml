<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_expense_form_inherit_final_v5" model="ir.ui.view">
        <field name="name">hr.expense.form.inherit.final.v5</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='tax_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_mode']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='employee_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//label[@for='name']" position="attributes">
                <attribute name="string">Nombre</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="placeholder">Ej. Cena de equipo...</attribute>
            </xpath>

            <xpath expr="//field[@name='unit_amount']" position="before">
                
                <label for="x_worker_ids" string="Miembros a pagar"/>
                <field name="x_worker_ids" widget="many2many_tags" options="{'no_create': True}"/>
                
                <label for="custom_note" string="Nota"/>
                <field name="custom_note" placeholder="Escribe aquÃ­ la nota..."/>
            </xpath>

            <xpath expr="//field[@name='unit_amount']" position="attributes">
                <attribute name="string">Costo</attribute>
            </xpath>

        </field>
    </record>
</odoo>