<odoo>

    <!-- Ekintza -->
    <record id="action_library_book_list" model="ir.actions.act_window">
        <field name="name">Liburuak</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu nagusia -->
    <menuitem id="menu_library_root" name="Book Library" sequence="10"/>

    <!-- Azpimenua: Liburuak -->
    <menuitem id="menu_library_books" name="Liburuak" parent="menu_library_root" action="action_library_book_list" sequence="10"/>

    <!-- Liburuen formularioa -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Liburua">
                <sheet>
                    <group>
                        <field name="title" string="Titulua"/>
                        <field name="author" string="Egilea"/>
                        <field name="published_date" string="Argitaratze data"/>
                        <field name="available" string="Eskuragarri"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Liburuen zerrenda -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Liburuak">
                <field name="title" string="Izenburua"/>
                <field name="author" string="Egilea"/>
                <field name="published_date" string="Argitaratze data"/>
                <field name="available" string="Eskuragarri"/>
            </tree>
        </field>
    </record>

</odoo>