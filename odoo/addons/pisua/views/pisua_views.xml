<record id="view_pisua_form" model="ir.ui.view">
    <field name="name">pisua.pisua.form</field>
    <field name="model">pisua.pisua</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Ej: Piso Centro 1A"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="code"/>
                        <field name="coordinator_id" options="{'no_create': True}"/>
                    </group>
                </group>

                <notebook>
                    <page string="Trabajadores Asignados" name="workers">
                        <field name="worker_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="work_email"/>
                                <field name="department_id"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Historial de Gastos" name="expenses">
                        <field name="expense_ids" readonly="1">
                            <tree>
                                <field name="date"/>
                                <field name="employee_id" string="Solicitante"/>
                                <field name="name" string="DescripciÃ³n"/>
                                <field name="total_amount" sum="Total acumulado"/>
                                <field name="state" widget="badge" 
                                       decoration-info="state == 'draft'" 
                                       decoration-success="state == 'done'"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>