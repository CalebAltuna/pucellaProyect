<odoo>

    <!-- Ekintza -->
    <record id="action_task_list" model="ir.actions.act_window">
        <field name="name">Atazak</field>
        <field name="res_model">task.tracker</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu nagusia -->
    <menuitem id="menu_task_root" name="Task Tracker" sequence="10"/>

    <!-- Azpimenua: Atazak -->
    <menuitem id="menu_task" name="Atazak" parent="menu_task_root" action="action_task_list" sequence="10"/>

    <!-- Atazen formularioa + Zerrenda -->
    <record id="view_task_form" model="ir.ui.view">
        <field name="name">task.tracker.form</field>
        <field name="model">task.tracker</field>
        <field name="arch" type="xml">
            <form string="Ataza">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">task.tracker.tree</field>
        <field name="model">task.tracker</field>
        <field name="arch" type="xml">
            <tree string="Atazak">
                <field name="name"/>
                <field name="done"/>
            </tree>
        </field>
    </record>

</odoo>
